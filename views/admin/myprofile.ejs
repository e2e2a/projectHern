                    <%- include('./partials/navbar/navbar2.ejs'); %>

                            <!-- Deceased Table Start -->
                            <div class="container-fluid pt-4 px-4">
                                <form action="profileUpdate" method="post">
                                    <div class="bg-light rounded h-100 p-4">
                                        <div class="row">
                                            <h6 class="mb-4">My Profile</h6>
                                            <div class="col-sm-12 col-md-6 col-lg-6">
                                                <div class="form-floating mb-3">
                                                    <input type="text" class="form-control" name="fullname" id="fullname"
                                                    placeholder="Surname, Firstname Middlename" style="text-transform:capitalize;" value="<%= userLogin.fullname %>" required/>
                                                    <label for="fullname" class="form-label">Full Name</label>
                                                </div>
                                            </div>
                                            <div class="col-sm-12 col-md-6 col-lg-6">
                                                <div class="form-floating mb-3">
                                                    <input type="email" class="form-control" name="email" id="email"
                                                    placeholder="name@example.com" value="<%= userLogin.email %>" required/>
                                                    <label for="email" class="form-label">Email address</label>
                                                </div>
                                            </div>
                                            <div class="col-sm-12 col-md-6 col-lg-6 mb-3">
                                                <div class="form-floating mb-3">
                                                    <input type="text" class="form-control" name="password" id="password"
                                                    placeholder="Password" value="<%= userLogin.password %>" required/>
                                                    <label for="password" class="form-label">Password</label>
                                                </div>
                                            </div>
                                            <div class="col-sm-12 col-md-6 col-lg-6">
                                                <div class="form-floating mb-3">
                                                    <input type="text" class="form-control" name="confirmPassword" id="confirmPassword"
                                                    placeholder="Confirm Password" value="<%= userLogin.password %>" required/>
                                                    <label for="confirmPassword" class="form-label">Confirm Password</label>
                                                </div>
                                            </div>
                                            <div class="col-12 justify-content-center d-flex mt-3 mb-3">
                                                    <input type="submit" value="Submit" class="btn btn-primary" />
                                            </div>
                                        </div>
                                    </div>
                                </form>
                            </div>
                            

                            <%- include('./partials/copyright/copyright.ejs'); %>
                </div>
                <!-- Content End -->


                <!-- Back to Top -->
                <a href="#" class="btn btn-lg btn-primary btn-lg-square back-to-top"><i class="bi bi-arrow-up"></i></a>
        </div>
    <!-- JavaScript Libraries -->
    <script>
        <% if(messages.message) {%>
            alert('<%= messages.message %>');
        <% } %>
        document.addEventListener("DOMContentLoaded", function () {
    const addRelativeBtn = document.getElementById('addRelativeBtn');
    const addBeforeTheButtonDiv = document.getElementById('addBeforeTheButton');

    addRelativeBtn.addEventListener('click', function () {
        const newRelativeDiv = document.createElement('div');
        newRelativeDiv.className = 'col-12 relative-inputs'; // Add a specific class to identify relative input fields

        const relativesInputGroup = document.getElementById('relatives');
        const newRelativesInputGroup = relativesInputGroup.cloneNode(true); // Clone the original relatives input group

        // Clear the values of the cloned input group
        newRelativesInputGroup.querySelector('#relativeName').value = '';
        newRelativesInputGroup.querySelector('#relativeEmail').value = '';

        newRelativeDiv.appendChild(newRelativesInputGroup);

        addBeforeTheButtonDiv.parentNode.insertBefore(newRelativeDiv, addBeforeTheButtonDiv);
    });

    const removeRelativeBtn = document.getElementById('removeRelativeBtn');
    removeRelativeBtn.addEventListener('click', function () {
        // Select all divs containing relative input fields
        const relativeDivs = document.querySelectorAll('.relative-inputs');
        // If there are more than one relative divs, remove the last one
        if (relativeDivs.length > 0) {
            relativeDivs[relativeDivs.length - 1].remove();
        }
    });
});
    </script>
