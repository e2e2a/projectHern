                            <!-- Deceased Table Start -->
                            <div class="container-fluid pt-4 px-4">
                                <form action="" method="post">
                                    <div class="bg-light rounded h-100 p-4">
                                        <div class="row">
                                            <h6 class="mb-4">Edit Deceased Person</h6>
                                            <div class="col-12 col-sm-12 col-lg-6 col-xl-6">
                                                <div class="form-floating mb-3">
                                                    <input type="text" class="form-control" id="fullname" name="fullname" value="<%= deceased.fullname %>" style="text-transform: capitalize;"
                                                        placeholder="Alpha, Alpha Alpha" required/>
                                                    <label for="fullname">Full Name<small>(Surname, Firstname Middlename)</small></label>
                                                </div>
                                            </div>
                                            <div class="col-12 col-sm-12 col-lg-6 col-xl-6">
                                                <div class="form-floating mb-3">
                                                    <input type="date" class="form-control" id="deathDate" name="deathDate"
                                                        placeholder="MM/DD/YYYY" required/>
                                                    <label for="deathDate">Death of Date</label>
                                                </div>
                                            </div>
                                            <div class="col-12 col-sm-12 col-lg-6 col-xl-6">
                                                <div class="form-floating mb-3">
                                                    <input type="text" class="form-control" id="placeDeath" name="placeDeath"
                                                        placeholder="Place Of Death" value="<%= deceased.placeDeath %>" required/>
                                                    <label for="placeDeath">Place Of Death</label>
                                                </div>
                                            </div>
                                            <div class="col-12 col-sm-12 col-lg-6 col-xl-6">
                                                <div class="form-floating mb-3">
                                                    <input type="date" class="form-control" id="birthDate" name="birthDate"
                                                        placeholder="Birthdate"  required/>
                                                    <label for="birthDate">Birthdate</label>
                                                </div>
                                            </div>
                                            <div class="col-12 col-sm-12 col-lg-6 col-xl-6">
                                                <div class="form-floating mb-3">
                                                    <input type="text" class="form-control" id="placeBirth" name="placeBirth"
                                                        placeholder="Place Of Birth" value="<%= deceased.placeBirth %>" required/>
                                                    <label for="placeBirth">Place Of Birth</label>
                                                </div>
                                            </div>
                                            <div class="col-12 col-sm-12 col-lg-6 col-xl-6">
                                                <div class="form-floating mb-3">
                                                    <input type="number" class="form-control" id="ageDeath" name="ageDeath"
                                                        placeholder="Age of Death" value="<%= deceased.ageDeath %>" required/>
                                                    <label for="ageDeath">Age of Death</label>
                                                </div>
                                            </div>
                                            <div class="col-12 col-sm-12 col-lg-6 col-xl-6">
                                                <div class="form-floating mb-3">
                                                    <select class="form-select" id="gender" name="gender"
                                                        aria-label="Floating label select example" required>
                                                        <option value="Male" <% if (deceased.gender == 'Male') { %> selected <% } %>>Male</option>
                                                        <option value="Female" <% if (deceased.gender == 'Female') { %> selected <% } %>>Female</option>
                                                    </select>
                                                    <label for="gender">Gender</label>
                                                </div>
                                            </div>
                                            <div class="col-12 col-sm-12 col-lg-6 col-xl-6">
                                                <div class="form-floating mb-3">
                                                    <input type="text" class="form-control" id="occupation" name="occupation"
                                                        placeholder="Occupation" value="<%= deceased.occupation %>" required/>
                                                    <label for="occupation">Occupation</label>
                                                </div>
                                            </div>
                                            <div class="col-12 col-sm-12 col-lg-6 col-xl-6">
                                                <div class="form-floating mb-3">
                                                    <select class="form-select" id="civilStatus" name="civilStatus"
                                                        aria-label="Floating label select example" required>
                                                        <option value="Married" <% if (deceased.civilStatus == 'Married') { %> selected <% } %>>Married</option>
                                                        <option value="Single" <% if (deceased.civilStatus == 'Single') { %> selected <% } %>>Single</option>
                                                        <option value="Widow" <% if (deceased.civilStatus == 'Widow') { %> selected <% } %>>Widow</option>
                                                    </select>
                                                    <label for="civilStatus">Civil Status</label>
                                                </div>
                                            </div>
                                            <div class="col-12 col-sm-12 col-lg-6 col-xl-6">
                                                <div class="form-floating mb-3">
                                                    <input type="text" class="form-control" id="religion" name="religion"
                                                        placeholder="Religion" value="<%= deceased.religion %>" required/>
                                                    <label for="religion">Religion</label>
                                                </div>
                                            </div>
                                            <div class="col-12 col-sm-12 col-lg-6 col-xl-6">
                                                <div class="form-floating mb-3">
                                                    <input type="text" class="form-control" id="citizenship" name="citizenship"
                                                        placeholder="Citizenship" value="<%= deceased.citizenship %>" required/>
                                                    <label for="citizenship">Citizenship</label>
                                                </div>
                                            </div>
                                            <div class="col-12 col-sm-12 col-lg-6 col-xl-6">
                                                <div class="form-floating mb-3">
                                                    <select class="form-select" id="nameCemetery" name="nameCemetery"
                                                        aria-label="Floating label select example" required>
                                                        <option value="Block A" <% if (deceased.nameCemetery == 'Block A') { %> selected <% } %>>Block A</option>
                                                        <option value="Block B" <% if (deceased.nameCemetery == 'Block B') { %> selected <% } %>>Block B</option>
                                                    </select>
                                                    <label for="nameCemetery">Name of Cemetery</label>
                                                </div>
                                            </div>
                                            <div class="col-12 col-sm-12 col-lg-6 col-xl-6">
                                                <div class="form-floating mb-3">
                                                    <input type="text" class="form-control" id="guardian" name="guardian" value="<%= deceased.guardian %>"
                                                        placeholder="guardian(Fullname)" required/>
                                                    <label for="guardian">Guardian</label>
                                                </div>
                                            </div>
                                            <div class="col-12 col-sm-12 col-lg-6 col-xl-6">
                                                <div class="form-floating mb-3">
                                                    <input type="email" class="form-control" id="guardianEmail" name="guardianEmail" value="<%= deceased.guardianEmail %>"
                                                        placeholder="guardianEmail" required/>
                                                    <label for="guardianEmail">Guardian Email</label>
                                                </div>
                                            </div>
                                            <div class="col-12 col-sm-12 col-lg-6 col-xl-6">
                                                <div class="form-floating mb-3">
                                                    <input type="date" class="form-control" id="dateBuried" name="dateBuried" value="<%= deceased.dateBuried %>"
                                                        placeholder="dateBuried" required/>
                                                    <label for="dateBuried">Date Buried</label>
                                                </div>
                                            </div>
                                            <div class="col-12 col-sm-12 col-lg-6 col-xl-6">
                                                <div class="form-floating mb-3">
                                                    <select class="form-select" id="causeDeath" name="causeDeath"
                                                        aria-label="Floating label select example" required>
                                                        <option value="Natural" <% if (deceased.causeDeath == 'Natural') { %> selected <% } %>>Natural</option>
                                                        <option value="Accident" <% if (deceased.causeDeath == 'Accident') { %> selected <% } %>>Accident</option>
                                                        <option value="Murder" <% if (deceased.causeDeath == 'Murder') { %> selected <% } %>>Murder</option>
                                                        <option value="Suicide" <% if (deceased.causeDeath == 'Suicide') { %> selected <% } %>>Suicide</option>
                                                        <option value="Homicide" <% if (deceased.causeDeath == 'Homicide') { %> selected <% } %>>Homicide</option>
                                                        <option value="Unknown" <% if (deceased.causeDeath == 'Unknown') { %> selected <% } %>>Unknown</option>
                                                    </select>
                                                    <label for="causeDeath">Cause of Death</label>
                                                </div>
                                            </div>
                                            <div class="col-12 col-sm-12 col-lg-12 col-xl-12">
                                                <div class="form-floating">
                                                    <textarea class="form-control" placeholder="Leave a Description here"
                                                        id="description" name="description" style="height: 150px;" required><%= deceased.description %></textarea>
                                                    <label for="description">Description</label>
                                                </div>
                                            </div>
                                            <div class="col-12 mt-3 text-center">
                                                <button class="btn btn-primary w-50" type="submit">Submit</button>
                                            </div>
                                        </div>
                                    </div>
                                </form>
                            </div>
                            
                            


