        <div class="container-fluid d-flex justify-content-center align-items-center pt-5 pb-5 ">
            <form action="doEdit" method="post" class="border border-1 rounded p-3" style="width: 80%; background-color: #f7f7f7;">
                <div class="row" >
                    <h4 class="text-center p-5">Edit Profile</h4>
                    <div class="col-sm-12 col-md-6 col-lg-6">
                        <div class="mb-3">
                            <label for="fullname" class="form-label">Full Name</label>
                            <input type="text" class="form-control" name="fullname" id="fullname" value="<%= user.fullname %>"
                                placeholder="Surname, Firstname Middlename" style="text-transform:capitalize;">
                        </div>
                    </div>
                    <div class="col-sm-12 col-md-6 col-lg-6">
                        <div class="mb-3">
                            <label for="email" class="form-label">Email address</label>
                            <input type="email" class="form-control" name="email" id="email" value="<%= user.email %>"
                                placeholder="name@example.com">
                        </div>
                    </div>
                    <div class="col-sm-12 col-md-6 col-lg-6">
                        <div class="mb-3">
                            <label for="address" class="form-label">Address</label>
                            <input type="text" class="form-control" name="address" id="address" value="<%= user.address %>"
                                placeholder="St. name">
                        </div>
                    </div>
                    <div class="col-sm-12 col-md-6 col-lg-6">
                        <div class="mb-3">
                            <label for="contact" class="form-label">Contact</label>
                            <input type="text" class="form-control" name="contact" id="contact" value="<%= user.contact %>"
                                placeholder="+63912-345-6789" pattern="(\+639\d{2}-\d{3}-\d{4}|\+639\d{9}|09\d{2}-\d{3}-\d{4}|09\d{9})" required/>
                        </div>
                    </div>
                    
                    <div class="col-12" id="create">
                        <div class="mb-3">
                            <label for="relatives" class="form-label">Relatives:</label>
                            <% if (user.relatives && user.relatives.length > 0) { %>
                                <% user.relatives.forEach(function(relative, index) { %>
                            <div class="input-group mb-3" id="relativeInputGroup">
                                <input type="text" class="form-control relativeName<%= index %>" name="relativeName" id="relativeName" value="<%= relative.relativeName %>"
                                placeholder="Surname, Firstname Middlename" style="text-transform:capitalize;">
                                <input type="email" class="form-control relativeEmail<%= index %>" name="relativeEmail" id="relativeEmail" value="<%= relative.relativeEmail %>"
                                placeholder="name@example.com">
                                <button type="button" class="rounded removeRelativeBtn2" data-index="<%= index %>" style="padding: 12px;"><i class="fa fa-trash"></i></button>
                            </div>
                            <% }); %>
                            <% } %>
                        </div>
                    </div>
                    <div class="col-12 col-sm-12 mt-3" id="addBeforeTheButton">
                        <div class="btn-group" role="group">
                            <input type="button" value="+ Add" class="primary" id="addRelativeBtn" />
                            <!-- <input type="button" value="- Remove" id="removeRelativeBtn"  /> -->
                        </div>
                    </div>
                    <div class="col-sm-12 col-md-6 col-lg-6 mt-3">
                        <div class="mb-3">
                            <label for="password" class="form-label">Password</label>
                            <input type="password" class="form-control" name="password" id="password"
                                placeholder="Password ( old or new )" required/>
                        </div>
                    </div>
                    <div class="col-sm-12 col-md-6 col-lg-6 mt-3">
                        <div class="mb-3">
                            <label for="confirmPassword" class="form-label">Confirm Password</label>
                            <input type="password" class="form-control" name="confirmPassword" id="confirmPassword"
                                placeholder="Confirm Password" required/>
                        </div>
                    </div>
                    <div class="col-12 justify-content-center d-flex mt-3 mb-3">
                        <ul class="actions">
                            <li><input type="submit" value="Submit" class="primary" /></li>
                            <li><input type="reset" value="Reset" /></li>
                        </ul>
                    </div>
                </div>
