<!DOCTYPE HTML>
<html>

<head>
    <title>
        <%= title %> | <%= site_title %>
    </title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=no" />
    <meta name="description" content="" />
    <meta name="keywords" content="" />
    <link rel="stylesheet" href="public/css/main.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
</head>
<body class="is-preload">
    <%- include('./partials/nav/nav.ejs'); %>
    <!-- Heading -->
    <div id="heading">
        <h1>Login</h1>
    </div>

    <!-- Main -->
    <div class="container-fluid d-flex justify-content-center align-items-center w-100">
        <form action="login" method="post" class=" w-100 mt-5 mb-5 d-flex justify-content-center align-items-center" >
            <div class="col-md-4 col-12 col-sm-12 col-lg-4 p-5 border border-1 rounded" style=" background-color: #f7f7f7;">
                <h3 class="text-center p-3">Login</h3>
                <% if(messages.error) {%>
                    <div class="col-12">
                        <h4 class="alert alert-danger" style="text-align: center; color: red;"> <%= messages.error %></h4>
                    </div>
                <% } %>
                <div class=" col-12">
                    <div class="mb-3">
                        <label for="email" class="form-label">Email Address</label>
                        <input type="email" class="form-control" name="email" id="email"
                            placeholder="email@example.com" required/>
                    </div>
                </div>
                <div class="col-12">
                    <div class="mb-3">
                        <label for="password" class="form-label">Password</label>
                        <input type="password" class="form-control" name="password" id="password"
                            placeholder="Password"  required/>
                    </div>
                </div>
                <div class="col-12 d-flex justify-content-end">
                    <div class="mb-3">
                        <a href="/register">Don't have an account?</a>
                    </div>
                </div>
                <div class="col-12 justify-content-center d-flex mt-2 mb-1">
                    <ul class="actions">
                        <li><input type="submit" value="Submit" class="primary" /></li>
                        <li><input type="reset" value="Reset" /></li>
                    </ul>
                </div>
            </div>
        </form>
    </div>

    <!-- Footer -->
    <%- include('./partials/copyright/copyright.ejs'); %>
    <script>
        <% if (messages.message) { %>
        window.alert('<%= messages.message %>');
        <% } %>
        </script>
    <!-- Scripts -->
    <%- include('./partials/footer/footer.ejs') %>